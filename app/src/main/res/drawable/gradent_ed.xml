<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <gradient
                android:angle="360"
                android:centerColor="#1fabec"
                android:endColor="#175df5"
                android:startColor="#1FABEC"
                android:type="linear">

            </gradient>
            <corners android:radius="@dimen/_2sdp" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/_1sdp"
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp"
        android:top="@dimen/_1sdp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp"
                android:color="@color/blue"/>
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>